{
    "manifest_version": 2,
    "name": "Save incognito session",
    "version": "0.1",
    "description": "Create incognito windows and save their cookies on exit",

    "icons": {
        "96": "icons/icon.svg"
    },

    "background": {
        "scripts": ["background.js"]
    },
    
    "browser_action": {
        "default_icon": {
            "96": "icons/icon.svg"
        },
        "default_title": "New incognito window"
    },
    
    "options_ui": {
        "page": "options/index.html",
        "browser_style": true
    },
    
    "incognito": "spanning",
    
    "permissions": [
        "cookies",
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "applications": {
        "gecko": {
            "id": "save-incognito-session@scarpetta.eu"
        }
    }
}
